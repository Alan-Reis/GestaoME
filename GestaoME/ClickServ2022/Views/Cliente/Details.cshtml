@model ClickServ2022.Models.Cliente

@{
    ViewData["Title"] = "Details";
}

<div>
    <dl class="row">
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.ClienteID)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.ClienteID)
        </dd>
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.Nome)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.Nome)
        </dd>
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.CPF)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.CPF)
        </dd>
    </dl>
</div>

<div>
    @Html.ActionLink("Adicionar Contato", "Create","Contato", new { id = Model.ClienteID }) |
    @Html.ActionLink("Add Dados", "AddDados", new { id = Model.ClienteID }) 
</div>

<table class="table">
    <thead>
        <tr>
            <th>
                Celular
            </th>
            <th>
                Telefone
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
        @foreach (var item in Model.Contatos)
        {
            <tr>
                <td>
                    @Html.DisplayFor(modelItem => item.Celular)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.Telefone)
                </td>
                <td>
                    @Html.ActionLink("Editar", "Edit", "Contato", new { id=item.ContatoID }) |
                    @Html.ActionLink("Deletar", "Delete", "Contato", new { id=item.ContatoID })
                </td>
            </tr>
        }
    </tbody>
</table>

<table class="table">
    <thead>
        <tr>
            <th>
                Logradouro
            </th>
            <th>
                Complemento
            </th>
            <th>
                Bairro
            </th>
            <th>
                Equipamento
            </th>
            <th>
                Modelo
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
        @foreach (var item in Model.Enderecos)
        {
            <tr>
                <td>
                    @Html.DisplayFor(modelItem => item.Logradouro)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.Complemento)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.Bairro)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.Equipamento.Tipo)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.Equipamento.Modelo)
                </td>
                <td>
                    @Html.ActionLink("Editar", "Edit", "Endereco", new { id=item.EnderecoID }) |
                    @Html.ActionLink("Detalhes", "Details", "Endereco", new { id=item.EnderecoID }) |
                    @Html.ActionLink("Deletar", "Delete", "Endereco", new { id=item.EnderecoID })
                </td>
            </tr>
        }
    </tbody>
</table>

<div>
    @Html.ActionLink("Edit", "Edit", new { id = Model.ClienteID }) |
    <a asp-action="Index">Voltar</a>
</div>
