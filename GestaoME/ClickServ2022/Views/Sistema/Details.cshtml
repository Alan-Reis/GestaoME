@model ClickServ2022.Models.Sistema

@{
    ViewData["Title"] = "Details";
}

<form asp-action="Edit">
    <div>
        <div class="form-group">
            <input asp-for="Cliente.ClienteID" class="form-control" type="hidden" />
            <input asp-for="SistemaID" class="form-control" type="hidden" />
        </div>
        <div class="form-row">
            <div class="form-group col-md-4">
                <input asp-for="NomeSistema" class="form-control" placeholder="Sistemas" required id="sistema" />
                <span asp-validation-for="NomeSistema" class="text-danger"></span>
            </div>
            <div class="form-group">
                <input type="button" value="Editar" class="btn btn-warning" onclick="habilitar()" />
                <input type="submit" value="Salvar" class="btn btn-success" id="salvar" />
                @Html.ActionLink("Voltar", "Details","Contrato", new { id = Model.Cliente.ClienteID },new { @class = "btn btn-primary"})
            </div>
        </div>
    </div>
</form>
<br />

<div>
    @Html.ActionLink("Novo Equipamento", "Create","Equipamento", new { id = Model.SistemaID, tipoEnderecoSistema = "sistema" },new { @class = "btn btn-secondary"})
</div>
<table class="table">
    <tbody>
        @foreach (var item in Model.Equipamentos)
        {
            <tr>
                <td>
                    @Html.ActionLink(item.Tipo, "Details", "Equipamento",  new { id=item.EquipamentoID })
                </td>
                <td>
                    @Html.ActionLink(item.Fabricante, "Details", "Equipamento",  new { id=item.EquipamentoID })
                </td>
                <td>
                    @Html.ActionLink(item.Modelo, "Details", "Equipamento",  new { id=item.EquipamentoID })
                </td>
                <td>
                    @Html.ActionLink(item.NSerie, "Details", "Equipamento",  new { id=item.EquipamentoID })
                </td>
                <td>
                    @Html.ActionLink("Atender", "Create", "Atendimento", new { id=item.EquipamentoID, redirecionar = "sistema" }, new { @class = "btn btn-secondary"})
                    @Html.ActionLink("Gerar O.S", "Create", "OrdemServico", new { id=item.EquipamentoID, redirecionar = "sistema" }, new { @class = "btn btn-secondary"})
                </td>
            </tr>
        }
    </tbody>
</table>

<script src="~/js/habilitar-botao-sistema-contrato.js"></script>
