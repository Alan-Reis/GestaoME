@model ClickServ2022.Models.OrdemServico

@{
    ViewData["Title"] = "Delete";
}

<div class="modal-dialog">
    <div class="modal-content">
        @using (Html.BeginForm())
        {
            <div class="modal-header">
                <h4 class="modal-title">Excluir ordem de serviço</h4>
            </div>

            @Html.AntiForgeryToken()

            <div class="modal-body">

                <h3 style="color:red">Deseja excluir ordem de serviço?</h3>

                <form asp-action="Delete">
                    <input type="submit" value="Sim" class="btn btn-danger" />
                    <button type="button" class="btn btn-primary" data-dismiss="modal">Não</button>
                </form>

                <div>
                    <hr />
                    <dl class="row">
                        <dt class="col-sm-2">
                            @Html.DisplayNameFor(model => model.OrdemServicoID)
                        </dt>
                        <dd class="col-sm-10">
                            @Html.DisplayFor(model => model.OrdemServicoID)
                        </dd>
                        <dt class="col-sm-2">
                            @Html.DisplayNameFor(model => model.Data)
                        </dt>
                        <dd class="col-sm-10">
                            @Html.DisplayFor(model => model.Data)
                        </dd>
                        <dt class="col-sm-2">
                            @Html.DisplayNameFor(model => model.Valor)
                        </dt>
                        <dd class="col-sm-10">
                            @Html.DisplayFor(model => model.Valor)
                        </dd>
                        <dt class="col-sm-2">
                            @Html.DisplayNameFor(model => model.Defeito)
                        </dt>
                        <dd class="col-sm-10">
                            @Html.DisplayFor(model => model.Defeito)
                        </dd>
                        <dt class="col-sm-2">
                            @Html.DisplayNameFor(model => model.Relatorio)
                        </dt>
                        <dd class="col-sm-10">
                            @Html.DisplayFor(model => model.Relatorio)
                        </dd>
                    </dl>
                </div>
            </div>
        }
    </div><!-- /.modal-content -->
</div><!-- /.modal-dialog -->
