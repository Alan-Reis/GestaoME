@model ClickServ2022.Models.Atendimento

@{
    ViewData["Title"] = "Create";
}

<hr />
<div class="row">
    <div class="col-md-4">
        <form asp-action="Create">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <div class="form-group">
                <input asp-for="Equipamento.EquipamentoID" class="form-control" type="hidden" />
                <input name="redirecionar" value="@ViewBag.Redirecionar" type="hidden" />
            </div>
            <div class="form-group">
                <label asp-for="Defeito" class="control-label"></label>
                <input asp-for="Defeito" class="form-control" />
                <span asp-validation-for="Defeito" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Data" class="control-label"></label>
                <input asp-for="Data" class="form-control" />
                <span asp-validation-for="Data" class="text-danger"></span>
            </div>
            <div class="form-group">
                <p>Período</p>
                <select asp-for="Periodo"
                        asp-items="@ViewBag.Periodo" class="form-control">
                </select>
            </div>
            <div class="form-group">
                <label asp-for="Observacao" class="control-label"></label>
                <input asp-for="Observacao" class="form-control" />
                <span asp-validation-for="Observacao" class="text-danger"></span>
            </div>
            <div class="form-group">
                <p>Técnico</p>
                <select asp-for="Colaborador"
                        asp-items="@ViewBag.Tecnico" class="form-control">
                </select>
            </div>
            <div class="form-group">
                <input type="submit" value="Salvar" class="btn btn-primary" />
                <input type="button" value="Voltar" onclick="btnVoltar()" class="btn btn-primary" />
            </div>
        </form>
    </div>
</div>

@section Scripts {

    <script src="~/js/btn-voltar.js"></script>


    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }
    }
