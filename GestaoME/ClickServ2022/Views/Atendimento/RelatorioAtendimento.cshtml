@model IEnumerable<ClickServ2022.Models.RelatorioAtendimento>

@{
    ViewData["Title"] = "RelatorioAtendimento";
}

<link rel="stylesheet" href="~/css/select-row-color.css" />

<form asp-action="RelatorioAtendimento">
    <div class="row">
        <div class="input-group mb-3">
            <span class="input-group-text" id="basic-addon1">Filtrar atendimento </span>
            <input type="date" name="data">
            <input type="submit" value="Buscar" class="btn btn-primary" />
        </div>
    </div>
</form>

<div class="row">
    <div class="input-group mb-3">
        <span class="input-group-text" id="basic-addon1">Informe WhatsApp</span>
        <input type="text" id="phone" class="" />
        <button id="EnviarWhatsApp" class="btn btn-primary">Enviar</button>
    </div>
    <div class="row">
        <div class="col">
            <button id="expPDF" class="btn btn-primary">PDF</button>
            <button id="imprimir" class="btn btn-primary">Imprimir</button>
        </div>
    </div>
</div>
<br />
<div class="row">
    <table class="table table-hover" id="minhaTabela">
        <thead>
            <tr id="trBlock" class="table-primary table-sm">
                <th>
                    Nome
                </th>
                <th>
                    Celular
                </th>
                <th>
                    Telefone
                </th>
                <th>
                    Logradouro
                </th>
                <th>
                    Complemento
                </th>
                <th>
                    Bairro
                </th>
                <th>
                    Cidade
                </th>
                <th>
                    Tipo
                </th>
                <th>
                    Fabricante
                </th>
                <th>
                    Modelo
                </th>
                <th>
                    Defeito
                </th>
                <th>
                    Observação
                </th>
                <th>
                    Data
                </th>
                <th>
                    Período
                </th>
                <th>
                    Colaborador
                </th>
            </tr>
        </thead>
        <tbody>
            @if (Model != null)
            {
                @foreach (var item in Model)
                {
                    <tr>
                        <td>
                            @Html.DisplayFor(modelItem => item.Cliente.Nome)
                        </td>
                        <td>
                            @Html.DisplayFor(modelItem => item.Contato.Celular)
                        </td>
                        <td>
                            @Html.DisplayFor(modelItem => item.Contato.Telefone)
                        </td>
                        <td>
                            @Html.DisplayFor(modelItem => item.Endereco.Logradouro)
                        </td>
                        <td>
                            @Html.DisplayFor(modelItem => item.Endereco.Complemento)
                        </td>
                        <td>
                            @Html.DisplayFor(modelItem => item.Endereco.Bairro)
                        </td>
                        <td>
                            @Html.DisplayFor(modelItem => item.Endereco.Cidade)
                        </td>
                        <td>
                            @Html.DisplayFor(modelItem => item.Equipamento.Tipo)
                        </td>
                        <td>
                            @Html.DisplayFor(modelItem => item.Equipamento.Fabricante)
                        </td>
                        <td>
                            @Html.DisplayFor(modelItem => item.Equipamento.Modelo)
                        </td>
                        <td>
                            @Html.DisplayFor(modelItem => item.Atendimento.Defeito)
                        </td>
                        <td>
                            @Html.DisplayFor(modelItem => item.Atendimento.Observacao)
                        </td>
                        <td>
                            @Html.DisplayFor(modelItem => item.Atendimento.Data)
                        </td>
                        <td>
                            @Html.DisplayFor(modelItem => item.Atendimento.Periodo)
                        </td>
                        <td>
                            @Html.DisplayFor(modelItem => item.Atendimento.Colaborador)
                        </td>
                    </tr>
                }
            }
        </tbody>
    </table>
</div>

@section Scripts {
    <!--PDF-->
    <script src="https://cdnjs.cloudflare.com/ajax/libs/jspdf/1.4.1/jspdf.debug.js" integrity="sha384-THVO/sM0mFD9h7dfSndI6TS0PgAGavwKvB5hAxRRvc0o9cPLohB0wb/PTA7LdUHs" crossorigin="anonymous"></script>

    <script src="~/js/relatorio-atendimento-whatsapp.js"></script>
    <script src="~/js/relatorio-atendimento-imprimir.js"></script>
    <script src="~/js/bloquear-linha-tabela.js"></script>
    <script src="~/js/relatorio-atendimento-pdf.js"></script>

    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }
    }
