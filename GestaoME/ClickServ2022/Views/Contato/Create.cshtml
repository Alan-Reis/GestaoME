@model ClickServ2022.Models.Contato

@{
    ViewData["Title"] = "Create";
}

<hr />
<div class="row">
    <div class="col-md-4">
        <form asp-action="Create">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <div class="form-group">
                 <input asp-for="Cliente.ClienteID" class="form-control" type="hidden" />
            </div>
            <div class="form-group">
                <label asp-for="Cliente.Contato.Telefone" class="control-label"></label>
                <input asp-for="Cliente.Contato.Telefone" class="form-control" />
                <span asp-validation-for="Cliente.Contato.Telefone" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Cliente.Contato.Celular" class="control-label" ></label>
                <input asp-for="Cliente.Contato.Celular" class="form-control" required/>
                <span asp-validation-for="Cliente.Contato.Celular" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Cliente.Contato.Email" class="control-label"></label>
                <input asp-for="Cliente.Contato.Email" class="form-control" />
                <span asp-validation-for="Cliente.Contato.Email" class="text-danger"></span>
            </div>
            <div class="form-group">
                <input type="submit" value="Criar" class="btn btn-primary" />
                 @Html.ActionLink("Voltar", "Details", "Cliente", new { id = Model.Cliente.ClienteID}, new  { @class = "btn btn-primary"})
            </div>
        </form>
    </div>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
